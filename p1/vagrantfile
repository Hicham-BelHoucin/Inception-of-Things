Vagrant.configure("2") do |config|
    config.vm.define "obeajS" do |obeajS|
        obeajS.vm.box = "ubuntu/focal64"
        obeajS.vm.hostname = "obeajS"
        obeajS.vm.network "private_network", ip: "192.168.56.110"
        obeajS.vm.synced_folder "./shared", "/vagrant/shared", create: true
        obeajS.vm.provision "shell", path: "./utils/server.sh"
        obeajS.vm.provider "virtualbox" do |vb|
            vb.memory = "1024"
            vb.cpus = "1"
        end
    end
    config.vm.define "obeajSW" do |obeajSW|
        obeajSW.vm.box = "ubuntu/focal64"
        obeajSW.vm.hostname = "obeajSW"
        obeajSW.vm.network "private_network", ip: "192.168.56.111"
        obeajSW.vm.provision "shell", path: "./utils/worker.sh"
        obeajSW.vm.provider "virtualbox" do |vb|
            vb.memory = "1024"
            vb.cpus = "1"
        end
    end
end